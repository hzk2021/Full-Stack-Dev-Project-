<h1 class="display-4">Confirm Order</h1>
<br>
<div id="cart">
  <table id="cart-table" class="table table-striped" cellpadding="10" cellspacing="1">
    <thead>
      <tr>
        <th style="text-align:left;">Item</th>
        <th style="text-align:right;" width="10%"></th>
        <th style="text-align:right;" width="10%"></th>
        <th style="text-align:center;" width="5%">Price</th>
        <th style="text-align:center;" width="5%">  </th>
        <th style="text-align:center;" width="5%">  </th>
        <th style="text-align:center;" width="5%">  </th>
      </tr>
    </thead>
    <tbody>
        {{#each order_list}}
          <tr>
            <td style="text-align:left;">{{this.food}}</td>
            <td style="text-align:right;"></td>
            <td style="text-align:right;"></td>
            <td style="text-align:center;">${{this.price}}</td>
            <td style="text-align:center;"></td>
            <td style="text-align:center;"></td>
          </tr>
        {{/each}}
        {{#each order_rewards_list}}
          <tr>
            <td style="text-align:left;">{{this}}</td>
            <td style="text-align:right;"></td>
            <td style="text-align:right;"></td>
            <td style="text-align:center;">FREE</td>
            <td style="text-align:center;"></td>
            <td style="text-align:center;"></td>
          </tr>
        {{/each}}
        <tr>
          <td class="cart-footer" colspan="1" align="right">Subtotal:</td>
          <td class="cart-footer" align="right"></td>
          <td class="cart-footer" align="right"></td>
          <td class="cart-footer" align="right"><strong>${{subtotal}}</strong></td>
          <td class="cart-footer" colspan="3"></td>
        </tr>
        <tr>
          <td class="cart-footer" colspan="1" align="right">Delivery fee:</td>
          <td class="cart-footer" align="right"></td>
          <td class="cart-footer" align="right"></td>
          <td class="cart-footer" align="right"><strong>${{delivery_price}}</strong></td>
          <td class="cart-footer" colspan="3"></td>
        </tr>
        <tr>
          <td class="cart-footer" colspan="1" align="right">Total:</td>
          <td class="cart-footer" align="right"></td>
          <td class="cart-footer" align="right"></td>
          <td class="cart-footer" align="right"><strong>${{total}}</strong></td>
          <td class="cart-footer" colspan="3"></td>
        </tr>
    </tbody>
  </table>
</div>
          
<form method="POST" action="">
<!--  Personal Details-->
  <h3>Personal Details</h3>
    <div class="row row-forms" style="margin-top:0px;">
      <div class="form-group col-xs-6">
        <label for="name">First name</label>
        <input type="text" class="form-control" name="First name" value="" required>
      </div>
      <div class="form-group col-xs-6">
        <label for="name">Last name</label>
        <input type="text" class="form-control" name="Last name" value="" required>      </div>
    </div>
    <div class="form-group" style="width:49%;">
        <label for="name">Phone no.</label>
        <input type="text" class="form-control" name="Phone no." value="" required>
    </div>
<!--Delivery Details  -->
  <div id="address">
    <h3>Delivery</h3>
      <div class="form-group">
        <label for="name">Street name</label>
        <input type="text" class="form-control" name="Street name" value="" required>
      </div>
      <div class="row row-forms">
        <div class="form-group col-xs-6" >
        <label for="name">Block no.</label>
        <input type="text" class="form-control" name="Block no." value="" required>
        </div>
        <div class="form-group col-xs-6">
        <label for="name">Unit no.</label>
        <input type="text" class="form-control" name="Unit no." value="" required>    
            <p style="color:grey;">Eg.12-07</p>
        </div>
      </div>
      <div class="form-group" style="width:49%;">
        <label for="name">Postal Code</label>
        <input type="text" class="form-control" name="Postal Code" value="" required>  
      </div>
  </div>
<!--  Payment-->
  <div class="form-group" style="width:49%;">
        <label for="name">Card Name</label>
        <input type="text" class="form-control" name="Card Name" value="" required>  
  </div>
  <div class="form-group" style="width:49%;">
        <label for="name">Card no.</label>
        <input type="text" class="form-control" name="Card no." value="" required>   
  </div>

    <div>
      <a class="btn btn-secondary" href="/user/cart">Cancel</a>
    </div>
    <div class="text-right">
      <a class="btn btn-success btn-submit" href="/user/cart/orderComplete">Confirm Order</a>
    </div>
</form>

