<div class="form-sm">
<h1 class="display-4">Create Menu (Admin)</h1>

<form method="POST" action="">
    <div class="form-group">
        <label for="name">Item name</label>
        <input type="text" class="form-control" name="Name" value="" required>
    </div>
    <div class="form-group">
        <label for="name">Price</label>
        <input type="text" class="form-control" name="Price" value="" required>
    </div>
    <div class="form-group">
        <label for="name">Course</label>
        <select id="course" name="Course" class="form-control">
            <option value="CBB" selected>Chargrilled Beef Burger</option>
            <option value="PAB">Premium Angus Beef</option>
            <option value="CCS">Chargrilled Chicken Sandwich</option>
            <option value="SID">Sides</option>
            <option value="SAL">Salad</option>
        </select>
    </div>
    <div id="prof">
        <div class="form-group">
        <label for="name">Description</label>
        <input type="text" class="form-control" name="Description" value="" required>  
        </div>
    </div>
    <div class="form-group">
        <label for="name">Image</label>
        <input type="text" class="form-control" name="image" value="" required>  
    </div>
    <!-- Checkboxes for selecting food on the menu that needs the new supply --> 
    <div class="form-group">
        <label>Food required</label>
        <table>
        {{#each checkboxes_list}}
            <tr class="category-heading">
                <td colspan="5">
                    <p><strong>{{ @key }}</strong></p>
                </td>
            </tr>
            {{#each this}}
            <tr>
                {{#each this}}
                <td>
                    <label><input type="checkbox" name="food_{{this.item_course}}" value="{{this.item_name}}"> {{this.item_name}}&nbsp&nbsp</label>
                </td>
                {{/each}}  
            </tr>
            {{/each}}
        {{/each}}
        </table>
    </div>

    <input type="submit" value="Submit" class="btn btn-primary"/>
</form>
</div>