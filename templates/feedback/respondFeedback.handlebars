<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<h3 class="text-center">Respond to feedback</h3>
			<form action="/admin/feedback/respond" method="POST">
				<div class="form-group">
					<label for="feedbackID">Feedback ID</label>
					<input type="text" name="feedbackID" class="form-control" value="{{feedbackID}}" required readonly>
				</div>
				<div class="form-group">
					<label for="message">Message</label>
                    <textarea name="message" class="form-control" cols="30" rows="10" required></textarea>
				</div>
				<button type="submit" class="btn btn-primary">Reply</button>
			</form>
		</div>
	</div>
</div>