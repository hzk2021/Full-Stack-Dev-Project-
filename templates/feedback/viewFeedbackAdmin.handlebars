<link href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css" rel="stylesheet">

<script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>


<h1>Users' Feedbacks</h1>
<table
  id="table"
  data-toggle="table"
  data-search="true"
  data-toolbar=".toolbar"
  data-toolbar-align="left"
  data-url="/admin/feedback/list-users-feedbacks"
  data-pagination= "true"
  data-side-pagination= "server"
  data-filter-control="true"
  data-buttons-class="primary"
  data-show-refresh="true">
  <thead>
    <tr>
      <th data-field="type">Type</th>
      <th data-field="rating">Rating</th>
      <th data-field="description">Description</th>
      <th data-field="dateCreated">CreatedAt</th>
      <th data-field="dateUpdated">UpdatedAt</th>
      <th data-field="response">Response</th>
      <th data-formatter="Respond">Option</th>
    </tr>
  </thead>
</table>

<script>
  function Respond(value, row) {
    if (row.response == null){
      return`<form action="/admin/feedback/respond/${row.feedbackID}" method="GET">
              <input type="submit" value="Respond" class="btn btn-success">
            </form>`
    }else{
      return "<b>Responded</b>"
      }
    }
</script>
