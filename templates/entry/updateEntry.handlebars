<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<h3 class="text-center">Update Entry</h3>
			<form action="/admin/entry/update" method="POST">
				<div class="form-group">
					<label for="entryID">Entry ID</label>
					<input type="text" name="entryID" class="form-control" value="{{entryID}}" required readonly>
				</div>
				<div class="form-group">
					<label for="fullname">Full Name</label>
					<input type="text" name="fullname" class="form-control" value="{{fName}}" required>
				</div>
				<div class="form-group">
					<label for="nric">NRIC</label>
					<input type="text" name="nric" class="form-control" min="9" max="9" value="{{NRIC}}" required>
				</div>
				<div class="form-group">
					<label for="phoneno">Phone Number</label>
					<input type="tel" name="phoneno" class="form-control" pattern="[6|8|9]\d{7}" value="{{phoneno}}" required>
				</div>
				<div class="form-group">
					<label for="temperature">Temperature</label>
					<input type="number" name="temperature" class="form-control" step=".01" value="{{temperature}}" required>
				</div>

				<button type="submit" class="btn btn-primary">Update</button>
			</form>
		</div>
	</div>
</div>